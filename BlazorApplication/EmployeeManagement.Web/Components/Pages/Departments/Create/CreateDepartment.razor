@page "/setup-department/{id}"
@page "/setup-department"
@rendermode InteractiveServer
@inherits CreateDepartmentBase

<h3>
    @(string.IsNullOrEmpty(Id) ? "Create Department" : "Update Department")
</h3>
<hr />

<EditForm Model="@Department" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group row m-1">
        <label for="name" class="col-sm-2 col-form-label">
            Department Name
        </label>
        <div class="col-sm-10">
            <InputText class="form-control" @bind-Value="Department.DepartmentName" placeholder="Enter department name" />
            <ValidationMessage For="@(()=> Department.DepartmentName)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">@(string.IsNullOrEmpty(Id) ? "Save" : "Update")</button>
</EditForm>