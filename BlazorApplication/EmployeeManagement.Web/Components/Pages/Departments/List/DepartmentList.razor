@page "/department-list"
@rendermode @(new InteractiveServerRenderMode(false))
@inherits DepartmentListBase

<h1>Department List</h1>
<a class="btn btn-primary" href="/setup-department">Create Department</a>
<hr />

@if (Departments is null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>SL</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Departments)
            {
                <tr>
                    <td>@Index</td>
                    <td>@department.DepartmentName</td>
                    <td>
                        <a href="@($"/setup-department/{department.Id}")" class="btn btn-info">Edit</a>
                        <a href="" onclick="@(()=> OnDeleted(department.Id))" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                Index++;
            }
        </tbody>
    </table>
}


